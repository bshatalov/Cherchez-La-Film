<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mDetailsImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:contentDescription="@string/long_description"
            tools:src="@drawable/bond" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mDetailsImageViewLike"
            android:layout_width="60dp"
            android:layout_height="60dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/mDetailsImageView"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:srcCompat="@drawable/ic_favorite_border_black_24dp"
            tools:src="@drawable/ic_favorite_black_24dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mDetailsTextView"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_width="398dp"
            android:layout_height="176dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/mDetailsImageView"
            card_view:layout_constraintVertical_bias="0.0"
            tools:text="@string/long_description" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/mDetailsEditTextComments"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_width="398dp"
            android:layout_height="176dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:hint="@string/detailsEditTextHint"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/mDetailsTextView"
            card_view:layout_constraintVertical_bias="0.0"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>